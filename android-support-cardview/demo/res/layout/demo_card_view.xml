<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="#ffded1e6"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/candy_orange"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android.support.v7.cardview:cardCornerRadius="5dp"
        android.support.v7.cardview:cardElevation="5dp"
        android.support.v7.cardview:cardBackgroundColor="@android:color/white"
        android.support.v7.cardview:contentPadding="4dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/candy_orange"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>

